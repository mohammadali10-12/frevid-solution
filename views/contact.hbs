  <section class="contact_section">

    <div class="container">
      <div class="row justify">
        <div class=" container  col-md-5  col-sm-5 col-xl-5">
          <div class="contact-text">
            <h1 style="font-weight:bolder;font-size: 48px;">Contact-Us</h1>
          </div>

          <p style="font-size: 25px;padding-top: 12px; color:white">Frevid Solution: your personal logo Design and web
            development partner. Get your project started today!
          </p>

          <div class="my-5">

            <button type="button" class="btncontact  ">Contact-Us</button>
          </div>
        </div>

        <div class=" container img col-md-7  col-sm-7 col-xl-7 col-xxl-7">
          <img src="/static/images/contact-img.svg" class="img-fluid" alt="">
        </div>

      </div>
    </div>
  </section>

  <section class="form_section">
    <div class="container">

      <div class="row">

        <div class="col  ">
          <form action="/form-submit" method="post">
            <div class="row form-bg">
              <div class="contact-form-title">
                <h1>Send Us A Massage</h1>
              </div>

              <div class="mb-3 col-6">
                <label for="exampleFormControlInput1" class="form-label">Name</label>
                <input type="text" class="form-control " id="exampleFormControlInput1" placeholder="Name" required
                  name="name">
              </div>
              <div class="mb-3 col-6">
                <label for="exampleFormControlInput1" class="form-label">Email</label>
                <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com"
                  required name="email">
              </div>
              <div class="mb-3 col-6">
                <label for="exampleFormControlInput1" class="form-label">Number</label>
                <input type="number" class="form-control" id="exampleFormControlInput1" placeholder="Number" required
                  name="number">
              </div>
              <div class="mb-3 col-6">
                <label for="exampleFormControlInput1" class="form-label">Services</label>
                <select class="form-select" aria-label="Default select example" required name="select">
                  <option selected>---select Service---</option>
                  <option name="select" value="Web-Design">Web-Design</option>
                  <option name="select" value="Branding">Branding</option>
                  <option name="select" value="Web-Development">Web-Development</option>
                </select>
              </div>

              <div class="mb-3">
                <label for="exampleFormControlTextarea1" class="form-label">message</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" placeholder="message" rows="3"
                  name="message"></textarea>
              </div>
              <div class="mb-3 submit-button">
                <button type="submit" class="btn btn-primary" role="button">Submit</button>
          </form>
        </div>
      </div>
    </div>

    <div class="col">

    </div>


    </div>
  </section>
